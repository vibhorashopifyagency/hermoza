.product-block-2.trending-block-{{section.id}} .card-information .card-review {
    display: none;
}
.product-block-2.trending-block-{{section.id}} .card-product .card__badge .badge {
    display: none;
}
.product-block-2.trending-block-{{section.id}} .card-product .card__badge .sale-badge {
    display: flex;
    width: 56px;
    height: 56px;
    border-radius: 100%;
    align-items: center;
    justify-content: center;
    text-align: center;
    {% if section.settings.sale_badge_bg != blank %}
      background: {{ section.settings.sale_badge_bg }}; 
    {% else %}
      background: var(--button-bg-color);
    {% endif %}
    {% if section.settings.sale_badge_color != blank %}
      color: {{ section.settings.sale_badge_color }};
    {% else %}
      color: var(--button-color);
    {% endif %}
}
.product-block-2.trending-block-{{section.id}} .card-product .card__badge .sale-badge span {
    font-size: 16px;
    font-weight: 600;
}
.product-block-2.trending-block-{{section.id}} .card-product .card__badge .sale-badge span .text {
    display: block;
    font-size: 12px;
    font-weight: 400;
}
.product-block-2.trending-block-{{section.id}} .card-product .card__badge {
    left: unset;
    right: 0px;
    top: 0;
}
.product-block-2.trending-block-{{section.id}} .price__sale .price__compare {
    display: none;
}
.product-block-2.trending-block-{{section.id}} .price__sale .price-item--sale {
    {% if section.settings.price_color != blank %}
      color: {{ section.settings.price_color }};
    {% else %}
      color: var(--product-price-sale-color);
    {% endif %}
}
.product-block-2.trending-block-{{section.id}} .card-information .card-swatch {
  display: none;
}

body.layout_rtl .product-block-2.trending-block-{{section.id}} .section-header .title {
    padding-right: 0;
    padding-left: 25px;
}
