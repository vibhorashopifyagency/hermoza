}
body.layout_rtl .product-block-2 .product-countdown-block .clock-item:first-child:before, body.layout_rtl .product-block-2 .product-countdown-block .clock-item:first-child:after {
    content: unset;
}
body.layout_rtl .product-block-2 .product-countdown-block .clock-item:last-child:before, body.layout_rtl .product-block-2 .product-countdown-block .clock-item:last-child:after {
