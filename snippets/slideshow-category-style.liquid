    border-radius: {{ section.settings.image_border_radius | append: 'px' }};
    overflow: hidden;
}
.right-image-box .image-content {
    position: absolute;
    top: 25px;
    left: 30px;
}
body.layout_rtl .right-image-box .image-content {
  left: unset;
  right: 30px;
}
.right-image-box .image-content .title {
    font-size: {{ section.settings.grid_title_size | append: 'px' }};
    {% if section.settings.grid_title_color != blank %}
        color: {{ section.settings.grid_title_color }};
    {% else %}
        color: var(--link-color);
    {% endif %}
    font-weight: {{ section.settings.grid_title_font_weight }};
    text-transform: {{ section.settings.grid_title_text_transform }};
    letter-spacing: {{ section.settings.grid_title_letter_spacing | append: 'px' }};
    margin-bottom: {{ section.settings.grid_title__space_bottom | append: 'px' }};
    display: inline-block;
}
.right-image-box .image-content .title:hover {
    {% if section.settings.grid_title_color_hover != blank %}
        color: {{ section.settings.grid_title_color_hover }};
    {% else %}
        color: var(--link-hover-color);
    {% endif %}
    
}
.right-image-box .slide-grid img {
    display: block;
    width: 100%;
}
{% if section.settings.button_style == '1' %}
  .right-image-box .image-content .button {
      {% if section.settings.button_bg_color != blank %}
          color: {{ section.settings.button_color }};
      {% else %}
          color: var(--button-color);
      {% endif %}
      {% if section.settings.button_bg_color != blank %}
           background: {{ section.settings.button_bg_color }};
      {% else %}
           background: var(--button-bg-color);
      {% endif %}
      {% if section.settings.button_border_color != blank %}
            border: {{ section.settings.button_border | append: 'px' }} solid {{ section.settings.button_border_color }};
      {% else %}
          border: {{ section.settings.button_border | append: 'px' }} solid  var(--button-border-color);
      {% endif %}
      letter-spacing: {{ section.settings.button_letter_spacing | append: 'px' }};
      padding: {{ section.settings.button_top_bottom_padding | append: 'px' }} {{ section.settings.button_left_right_padding | append: 'px' }};
      border-radius: {{ section.settings.vertical_button_border_radius | append: 'px' }};
      
