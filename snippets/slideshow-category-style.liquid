    border: unset;
    {% if section.settings.button_border_color != blank %}
          border-bottom: {{ section.settings.button_border | append: 'px' }} solid {{ section.settings.button_border_color }};
    {% else %}
         border-bottom: {{ section.settings.button_border | append: 'px' }} solid  var(--button-border-color);
    {% endif %}
    padding: {{ section.settings.button_top_bottom_padding | append: 'px' }} {{ section.settings.button_left_right_padding | append: 'px' }};
    border-radius: {{ section.settings.vertical_button_border_radius | append: 'px' }};
}
{% endif %}
.right-image-box .image-content .button:hover {
    {% if section.settings.button_hover_color != blank %}
       color: {{ section.settings.button_hover_color }};
    {% else %}
        color: var(--button-hover-color);
    {% endif %}
    {% if section.settings.button_bghover_color != blank %}
         background: {{ section.settings.button_bghover_color }};
    {% else %}
         background: var(--button-bg-hover-color);
    {% endif %}
    {% if section.settings.button_borderhover_color != blank %}
        border-color: {{ section.settings.button_borderhover_color }};
    {% else %}
        border-color: var(--button-border-hover-color);
    {% endif %}
    
}
.slideshow-category-main .right-image-box:first-child {
    padding-bottom: 15px;
}
.slideshow-category-main .right-image-box:last-child {
    padding-top: 15px;
}

.slideshow-category-main .menu-listing > li > a span.icon-img + span.text {
