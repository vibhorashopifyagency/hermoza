  {% if section.settings.heading_title_color != blank %}
      color: {{ section.settings.heading_title_color }};
  {% else %}
      color: var(--body-text-color);
  {% endif %}
  font-weight: {{ section.settings.heading_title_font_weight }};
  text-transform: {{ section.settings.heading_title_text_transform }};
  letter-spacing: {{ section.settings.heading_title_letter_spacing | append: 'px' }};
  margin-bottom: {{ section.settings.heading_title__space_bottom | append: 'px' }};
  border-bottom: {{ section.settings.vertical_title_border_width | append: 'px' }} solid {{ section.settings.vertical_title_border_color }};
}
.slideshow-category-menu nav.header__menu-vertical .menu-listing > li > a {
    padding: 10px 30px;
    font-size:{{ section.settings.font_size_category_menu | append: 'px' }};
    font-weight:{{ section.settings.font_weight_category_menu}};
    text-transform:{{ section.settings.text_transform_category_menu}};
    letter-spacing:{{ section.settings.letter_spacing_category_menu | append: 'px' }};
    {% if section.settings.color_category_menu != blank %}
        color:{{ section.settings.color_category_menu}};
    {% else %}
        color:var(--link-color);
    {% endif %}
    
}
.slideshow-category-menu nav.header__menu-vertical .menu-listing > li > a:hover{
    {% if section.settings.text_hover_category_menu != blank %}
        color:{{ section.settings.text_hover_category_menu}};
    {% else %}
        color:var(--link-hover-color);
    {% endif %}
