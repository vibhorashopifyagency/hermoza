
<style>

.slideshow-category-main {
  background: {% if section.settings.color_background != blank %}{{ section.settings.color_background }}{% else %}{{ section.settings.background_color }}{% endif %};
  margin-top: {{ section.settings.mg_top_main_desktop | append: 'px' }} !important;
  margin-bottom: {{ section.settings.mg_bottom_main_desktop | append: 'px' }} !important;
  padding-top: {{ section.settings.mg_top_desktop | append: 'px' }};
  padding-bottom: {{ section.settings.mg_bottom_desktop | append: 'px' }};
}
.slide-show {
    border-radius: {{ section.settings.slider_border_radius | append: 'px' }};
    overflow: hidden;
}
.slideshow-slider .slick-dots .container {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: {{ section.settings.dot_align }};
}
{%- if section.settings.enable_overlay != blank -%}
    .slideshow-slider .images-contain:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: {{ section.settings.overlay_color }};
      z-index: 1;
      opacity: 0.{{ section.settings.overlay_opacity }};
    }
{%- endif -%}
.slide-show .images-contain img {
    display: block;
}
.slideshow-slider .slick-arrow.slick-prev {
    left: {{ section.settings.position_horizontal_slick_arrow }};
}
.slideshow-slider .slick-arrow.slick-next {
    right: {{ section.settings.position_horizontal_slick_arrow }};
}
.slideshow-slider .slick-dots {
    padding-top: 0;
    position: absolute;
    bottom: {{ section.settings.type_dots_spacing | append: 'px' }};
    left: 0;
}
.slideshow-slider .slick-arrow {
    {% if section.settings.type_arrow_border_color != blank %}
         border-color: {{ section.settings.type_arrow_border_color }};
    {% else %}
         border-color: var(--type-arrow-border-color);
    {% endif %}
    {% if section.settings.type_arrow_bg_color != blank %}
         background: {{ section.settings.type_arrow_bg_color }};
    {% else %}
        background: var(--type-arrow-bg-color);
    {% endif %}
}
.slideshow-slider .slick-arrow:hover {
    {% if section.settings.type_arrow_hover_border_color != blank %}
         border-color: {{ section.settings.type_arrow_hover_border_color }};
    {% else %}
         border-color:var(--type-arrow-hover-border-color);
    {% endif %}
    {% if section.settings.type_arrow_bg_hover_color != blank %}
        background: {{ section.settings.type_arrow_bg_hover_color }};
    {% else %}
        background: var(--type-arrow-bg-hover-color);
    {% endif %}
}
.slideshow-slider .slick-arrow svg path {
    {% if section.settings.type_arrow_color != blank %}
        fill: {{ section.settings.type_arrow_color }};
    {% else %}
        fill: var(--type-arrow-color);
    {% endif %}
}
.slideshow-slider .slick-arrow:hover svg path {
    {% if section.settings.type_arrow_hover_color != blank %}
        fill: {{ section.settings.type_arrow_hover_color }};
    {% else %}
        fill: var(--type-arrow-hover-color);
    {% endif %}
}
.slideshow-slider .slick-dots li {
    {% if section.settings.type_dots_color != blank %}
          color: {{ section.settings.type_dots_color }};
    {% else %}
          color: var(--type-dots-color);
    {% endif %}
    {% if section.settings.type_dots_bg_color != blank %}
        background: {{ section.settings.type_dots_bg_color }};
    {% else %}
        background: var(--type-dots-bg-color);
    {% endif %}
    {% if section.settings.type_dots_border_color != blank %}
        border-color: {{ section.settings.type_dots_border_color }};
    {% else %}
        border-color: var(--type-dots-border-color);
    {% endif %}
}
.slide-show.dot-style-2 .slick-dots li {
    background: transparent;
    border-width: var(--type-dots-border-width);
    position: relative;
}
.slide-show.dot-style-2 .slick-dots li button {
    width: 50%;
    height: 50%;
    {% if section.settings.type_dots_bg_color != blank %}
        background: {{ section.settings.type_dots_bg_color }};
    {% else %}
        background: var(--type-dots-bg-color);
    {% endif %}
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 100%;
}
.slideshow-slider .slick-dots li.slick-active, .slideshow-slider .slick-dots li:hover {
    background: {{ section.settings.type_dots_bg_hover_color }};
    {% if section.settings.type_dots_hover_color != blank %}
      color: {{ section.settings.type_dots_hover_color }};
    {% else %}
       color: var(--type-dots-hover-color);
    {% endif %}
    {% if section.settings.type_dots_hover_border_color != blank %}
         border-color: {{ section.settings.type_dots_hover_border_color }};
    {% else %}
       border-color: var(--type-dots-hover-border-color);
    {% endif %}
}
.slideshow-slider .slick-dots li.slick-active button, .slideshow-slider .slick-dots li:hover button {
    {% if section.settings.type_dots_bg_hover_color != blank %}
        background: {{ section.settings.type_dots_bg_hover_color }};
    {% else %}
        background: var(--type-dots-bg-hover-color);
    {% endif %}
}
.slide-show-slde {
    position: relative;
}
.slideshow-slider .images-contain {
    position: relative;
}
.slide-show-content {
    position: absolute;
    z-index: 1;
    top: calc(50% + var(--header-height-2));
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
}
.slideshow-slider .images-contain img {
    height: 100%;
    width: 100%;
    object-fit: cover;
}
.slideshow-content-outer {
    display: flex;
    flex-wrap: wrap;
}
.slideshow-content-outer.content-box-left {
    justify-content: flex-start;
}
.slideshow-content-outer.content-box-center {
    justify-content: center;
}
.slideshow-content-outer.content-box-right {
    justify-content: flex-end;
}
.slideshow-slider .images-contain .slide-mobile {
    display: none;
}

.video-contain .fluid-width-video-wrapper {
    padding-top: {{ section.settings.video_height }} !important;
    width: 100%;
    position: relative;
    padding: 0;
    overflow: hidden;
    min-height: calc(100vh - var(--header-height-get))
}
.video-contain .fluid-width-video-wrapper video, .video-contain .fluid-width-video-wrapper iframe {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.slideshow-slider .video-button{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-left: 35px;
}
.slideshow-slider img{
  display:inline-block;
} 
 .fluid-width-video-wrapper video, .fluid-width-video-wrapper iframe {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
}
 .scoder-video-popup .fluid-width-video-wrapper iframe {
    height: 100%;
    border: 0;
}
.video-button button{
    background-color: unset;
    border: unset;
}
.scoder-video-popup .scoder-popup-close {
    top: -30px;
    right: 0;
}
.scoder-video-popup .scoder-popup-wrapper {
    padding: 0;
}
.scoder-video-popup .scoder-popup-header {
    margin: 0;
    padding: 0;
}
.slideshow-category-menu {
    height: 100%;
}
.slideshow-category-menu .header-vertical-menu-bottom {
    width: 100%;
    height: 100%;
}
.slideshow-category-menu .header-search-vertical {
    display: block;
    background: {{ section.settings.menu_background_color }};
    border: {{ section.settings.vertical_border_width | append: 'px' }} solid {{ section.settings.vertical_border_color }};
    border-radius: {{ section.settings.vertical_border_radius | append: 'px' }};
    padding: 20px 0px;
    height: 100%;
}
.slideshow-category-menu nav.header__menu-vertical {
    position: unset;
    pointer-events: unset;
    visibility: visible;
    opacity: 1;
    width: 100%;
    max-width: 100%;
    background: unset;
    box-shadow: unset;
    padding: 0px 0px;
}
.slideshow-category-menu .vertical-menu-title-main {
    padding: 0px 30px;
}
.slideshow-category-menu .vertical-menu-title {
