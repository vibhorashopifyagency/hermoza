<div class="scoder-popup scoder-notify-popup customPopup-small scoder-popup-LeftRight" data-notify-popup id="scoder-notify-popup">
    <div class="scoder-popup-wrapper">
    	<div class="scoder-popup-header customPopup-header">
		    <button type="button" class="scoder-popup-close customPopup-close clearfix" data-close-notify-popup aria-label="{{ 'general.common.close' | t }}">{% render 'icon-close' %} {{ 'general.common.close' | t }}</button>
		    <h5 class="scoder-popup-title customPopup-title text-center">{{ settings.notify_form_title | escape }}</h5>
    	</div>
	    <div class="scoder-popup-content custom-scrollbar">
	        <div class="scoder-notifyMe scoder-notifyMe--popup">{% render 'scoder-notify-sold-out', show_message: true %}</div>
	    </div>
    </div>
</div>