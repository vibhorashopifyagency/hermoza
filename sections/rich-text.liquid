    <div class="rich-text__blocks text-center">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'heading' -%}
            <h2 style="--color-heading-style: {{ block.settings.heading_color }};
                      --fontsize-heading-style: {{ block.settings.heading_size | append: 'px' }};
                      --heading-size-mb-style: {{ block.settings.heading_size_mb | append: 'px' }}">
              {{ block.settings.heading | escape }}
            </h2>
            <style>
              :root {
                  {% if block.settings.product_sub_heading_font == 'font_1' %}
                      --rich-title-font-family: {{fonts_name}};
                  {% else %}
                      --rich-title-font-family: {{fonts_name_2}};
                  {% endif %}
              }
              .rich-text__blocks h2{
                font-family: var(--rich-title-font-family);
                {% if block.settings.title_color != blank %}
                    color: {{ block.settings.title_color }};
                {% else %}
                     color: var(--heading-text-color);
                {% endif %}
                letter-spacing: {{ block.settings.title_letter_spacing | append: 'px' }};
                {% if block.settings.product_font_size_title == 0 %}
                   font-size: var(--font-h3-size);
                {% else %}
                   font-size: {{ block.settings.product_font_size_title | append: 'px' }};
                {% endif %}
                font-weight:{{ block.settings.product_title_font_weight }};
                margin-top: 0;
                padding-bottom: {{ block.settings.mg_bottom_title | append: 'px' }};
              }
              @media (max-width: 1024px) {
                .rich-text__blocks h2 {
                   {% if block.settings.product_font_size_title_tb == 0 %}
                     font-size: var(--font-h3-size-tb);
                  {% else %}
                     font-size: {{ block.settings.product_font_size_title_tb | append: 'px' }};
                  {% endif %}
                }
              }
              @media (max-width: 767px) {
                .rich-text__blocks h2 {
                   {% if block.settings.product_font_size_title_mb == 0 %}
                       font-size: var(--font-h3-size-mb);
                    {% else %}
                       font-size: {{ block.settings.product_font_size_title_mb | append: 'px' }};
                    {% endif %}
                  padding-bottom: {{ block.settings.mg_bottom_title_mb | append: 'px' }};
                }
              }
            </style>
        {%- when 'sub_heading' -%}
              <div class="rich-text__sub wow {{ block.settings.animations_type_subtitle }} delay-{{ block.settings.animation_delay_subtitle | replace: ".", "_" }}" style="--sub-heading-size-style: {{ block.settings.sub_heading_size | append: 'px' }}; 
                                                --sub-heading-color-style: {{ block.settings.sub_heading_color }}; 
                                                --font-weight-sub-heading-style: {{ block.settings.font_weight_sub_heading }}; 
                                                --margin-top-sub-heading-style: {{ block.settings.margin_top_sub_heading | append: 'px' }}">
                <p>{{ block.settings.sub_heading }}</p>
              </div>
              <style>
                :root {
                    {% if block.settings.sub_heading_fontfamily == 'font_1' %}
                        --rich-sub-heading-font-family: {{fonts_name}};
                    {% else %}
                        --rich-sub-heading-font-family: {{fonts_name_2}};
                    {% endif %}
                  }
                .rich-text__blocks .rich-text__sub.delay-{{ block.settings.animation_delay_subtitle | replace: ".", "_" }} {
                    animation-delay: {{ block.settings.animation_delay_subtitle }}
                }
                .rich-text__blocks .rich-text__sub {
                  font-size: {{ block.settings.sub_title_font_size | append: 'px' }}; 
                  padding-bottom: {{ block.settings.sub_title__space_bottom | append: 'px' }};
                  font-weight: {{ block.settings.sub_title_font_weight }};
                  color: {{ block.settings.sub_title_color }};
                  text-transform: {{ block.settings.sub_title_text_transform }};
                  font-family: var(--rich-sub-heading-font-family);
                  letter-spacing: {{ block.settings.sub_title_letter_spacing | append: 'px' }};
                }
                @media (max-width: 1024px) {
                  .rich-text__blocks .rich-text__sub {
                    font-size: {{ block.settings.sub_title_tb_font_size | append: 'px' }}; 
                    padding-bottom: {{ block.settings.sub_title__space_bottom_tb | append: 'px' }};
                  }
                }
                
                @media (max-width: 767px) {
                  .rich-text__blocks .rich-text__sub {
                    font-size: {{ block.settings.sub_title_mb_font_size | append: 'px' }}; 
                    padding-bottom: {{ block.settings.sub_title__space_bottom_mb | append: 'px' }};
                    text-align: center;
                  }
                }
              </style>
        {%- when 'text' -%}
            <div class="rich-text__text rte" 
                style="--color-text-style: {{ block.settings.text_color }};
                      --fontsize-text-style: {{ block.settings.text_size | append: 'px' }};
                      --fontweight-content-style: {{ block.settings.content_font_weight }};
                      --width-text-style: {{ block.settings.text_width }};
                      --margin-top-text-style: {{ block.settings.margin_top_text | append: 'px' }}">
              {{ block.settings.text }}
            </div>

        {%- when 'content' -%}
            <div class="rich-text__content rte" 
                style="--color-content-style: {{ block.settings.content_color }};
                      --fontsize-content-style: {{ block.settings.content_size | append: 'px' }};
                      
                      --width-content-style: {{ block.settings.content_width }};
                      --margin-top-content-style: {{ block.settings.margin_top_content | append: 'px' }};
                      --alignment-content-style: {{ block.settings.alignment_content }};">
                {% if block.settings.content_top != blank %}
                    <div class="rich-text__top">
                        {{ block.settings.content_top }}
                    </div>
                {% endif %}
                {% if block.settings.content_bottom != blank and block.settings.button_text_more != blank %}
                    <div class="rich-text__bottom">
                        {{ block.settings.content_bottom }}
                    </div>
                    <div class="btn--lessMore" style="--margin_top_button-text-style: {{ block.settings.margin_top_button_text | append: 'px' }};">
                        <a href="javascript:void(0)" class="button" id="rich-text__lessMore" data-more="{{ block.settings.button_text_more }}" data-less="{{ block.settings.button_text_less }}" style=" --fontsize-button-text-style: {{ block.settings.button_text_font_size | append: 'px' }};
                                  --fontweight-button-text-style:{{ block.settings.button_text_font_weight }};
                                  --color-button-text-style: {{ block.settings.button_text_color }};
                                  --bg-button-text-style: {% if block.settings.button_text_bg_color_gradient != blank %}{{ block.settings.button_text_bg_color_gradient }}{% else %}{{ block.settings.button_text_bg_color }}{% endif %};
                                  --border-button-text-style: {{ block.settings.button_text_border_color }};
                                  --color-button-text-hover-style: {{ block.settings.button_text_color_hover }};
                                  --bg-button-text-hover-style: {% if block.settings.button_text_bg_color_hover_gradient != blank %}{{ block.settings.button_text_bg_color_hover_gradient }}{% else %}{{ block.settings.button_text_bg_color_hover }}{% endif %};
                                  --border-button-text-hover-style: {{ block.settings.button_text_border_color_hover }};
                                  --width-button-text-style: {{ block.settings.button_text_more_width | append: 'px' }};
                                  --padding_top_button-text-style: {{ block.settings.pd_top_button_text | append: 'px' }};
                                  --padding_bottom_button-text-style: {{ block.settings.pd_bottom_button_text | append: 'px' }};">
                            {{ block.settings.button_text_more | escape }}
                        </a>
                    </div>
                {% endif %}
            </div>
        {%- when 'button' -%}
            <a{% if block.settings.button_link == blank %} aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button" style="--color-button-style: {{ block.settings.button_color }};
                                  --bg-button-style: {% if block.settings.button_bg_gradient != blank %}{{ block.settings.button_bg_gradient }}{% else %}{{ block.settings.button_bg_color }}{% endif %};
                                  --border-button-style: {{ block.settings.button_border_color }};
                                  --color-button-hover-style: {{ block.settings.button_color_hover }};
                                  --bg-button-hover-style: {% if block.settings.button_bg_gradient_hover != blank %}{{ block.settings.button_bg_gradient_hover }}{% else %}{{ block.settings.button_bg_color_hover }}{% endif %};
                                  --border-button-hover-style: {{ block.settings.button_border_color_hover }};
                                  --width-button-style: {{ block.settings.button_width }};
                                  --margin_top_button-style: {{ block.settings.margin_top_button | append: 'px' }};
                                    {% if block.settings.enable_underline_button %}
                                    text-decoration: underline;
                                    text-underline-offset: 0.2rem;
                                    padding: 0px;
                                    {% endif %}
                                  ">
              {{ block.settings.button_label | escape }}
            </a>
        {%- when 'social_media' -%}
            {% liquid
                assign social_spacing_top = block.settings.social_spacing_top | append: 'px'
                assign social_spacing_bottom = block.settings.social_spacing_bottom | append: 'px'
                assign social_icon_color = block.settings.social_icon_color
                assign social_icon_background_color = block.settings.social_icon_background_color
                assign social_icon_background_gradient = block.settings.social_icon_background_gradient
                assign social_icon_hover_color = block.settings.social_icon_hover_color
                assign social_icon_background_hover_color = block.settings.social_icon_background_hover_color
                assign social_icon_background_hover_gradient = block.settings.social_icon_background_hover_gradient
                assign social_icon_ring_color = block.settings.social_icon_ring_color
            %}
            <div class="item clearfix social-media-container"
                style="
                    --social-margin-top: {{ social_spacing_top }};
                    --social-margin-bottom: {{ social_spacing_bottom }};
                    --social-icon-color: {% if social_icon_color != blank %}{{ social_icon_color }}{% endif %};
                    --social-icon-background-color: {% if social_icon_background_gradient != blank %}{{ social_icon_background_gradient }}{% elsif social_icon_background_color != blank %}{{ social_icon_background_color }}{% endif %};
                    --social-icon-hover-color: {% if social_icon_hover_color != blank %}{{ social_icon_hover_color }}{% endif %};
                    --soical-icon-background-hover-color: {% if  social_icon_background_hover_gradient != blank %}{{ social_icon_background_hover_gradient }}{% elsif social_icon_background_hover_color != blank %}{{ social_icon_background_hover_color }}{% endif %};
                    --social-icon-ring-color: {% if social_icon_ring_color != blank %}{{ social_icon_ring_color }}{% endif %};
                "
            >
                {% render 'scoder-social-media-icons' %}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
    {%- liquid
        assign rich_text_bg = section.settings.rich_text_bg
        assign rich_text_bg_gradient = section.settings.rich_text_bg_gradient
        assign rich_text_bg_image = section.settings.rich_text_bg_image
       
        assign mg_top_desktop = section.settings.mg_top_desktop
        assign mg_top_tablet = section.settings.mg_top_tablet
        assign mg_top_mobile = section.settings.mg_top_mobile

        assign mg_bottom_desktop = section.settings.mg_bottom_desktop
        assign mg_bottom_tablet = section.settings.mg_bottom_tablet
        assign mg_bottom_mobile = section.settings.mg_bottom_mobile

        assign padding_full_width = section.settings.padding_full_width

        assign enable_border_top = section.settings.enable_border_top
        assign enable_border_bottom = section.settings.enable_border_bottom
        assign color_border_bottom = section.settings.color_border_bottom
    -%}

    {% if rich_text_bg_image != blank %}
        .section-block-{{section.id}}{
            background: url({{ rich_text_bg_image | img_url: '1920x' }});
            background-repeat: repeat-x;
            background-size: cover;
        }
    {% else %}
        .section-block-{{section.id}}{
            background: {% if rich_text_bg_gradient != blank %}{{ rich_text_bg_gradient }}{% else %}{{ rich_text_bg }}{% endif %};
        }
    {% endif %}

    .rich-text__blocks p {
        margin-bottom: 20px;
    }

    @media (min-width: 1200px) {
        .section-block-{{section.id}} {
            margin-top: {{ section.settings.mg_top_main_desktop | append: 'px' }} !important;
            margin-bottom: {{ section.settings.mg_bottom_main_desktop | append: 'px' }} !important;
            padding-top: {{ mg_top_desktop | append: 'px' }};
            padding-bottom: {{ mg_bottom_desktop | append: 'px' }};
        }
    }

    @media (min-width: 1025px) {
        {% if section.settings.container == 'fullwidth' %}
            .section-block-{{section.id}} .container-full {
                padding-left: {{ padding_full_width | append: 'px' }};
                padding-right: {{ padding_full_width | append: 'px' }};
            }
        {% endif %}

        {% if enable_border_top %}
            .section-block-{{section.id}} {
                border-top: 1px solid {{ color_border_bottom }};
            }
        {% endif %}

        {% if enable_border_bottom %}
            .section-block-{{section.id}} {
                border-bottom: 1px solid {{ color_border_bottom }};
            }
        {% endif %}
    }

    @media (min-width: 768px) and (max-width: 1199px) {
        .section-block-{{section.id}} {
            margin-top: {{ section.settings.mg_top_main_tablet | append: 'px' }} !important;
            margin-bottom: {{ section.settings.mg_bottom_main_tablet | append: 'px' }} !important;
            padding-top: {{ mg_top_tablet | append: 'px' }};
            padding-bottom: {{ mg_bottom_tablet | append: 'px' }};
        }
    }

    @media (max-width: 767px) {
        .section-block-{{section.id}} {
            margin-top: {{ section.settings.mg_top_main_mobile | append: 'px' }} !important;
            margin-bottom: {{ section.settings.mg_bottom_main_mobile | append: 'px' }} !important;
            padding-top: {{ mg_top_mobile | append: 'px' }};
            padding-bottom: {{ mg_bottom_mobile | append: 'px' }};
        }
    }
</style>

<script type="text/javascript">
    function homeMoreLess() {
        if ($('#rich-text__lessMore').length) {
            $('#rich-text__lessMore').on('click', function(){
                var moreText = $(this).data('more').trim();
                var lessText = $(this).data('less').trim();
                var _parent = $(this).parents('.rich-text__content');
                if ($(this).text().trim() == moreText) {
                    _parent.find('.rich-text__bottom').slideDown(200);
                    $(this).text(lessText);
                } else {
                    _parent.find('.rich-text__bottom').slideUp(200);
                    $(this).text(moreText);
                }
            })
        }
    }
    homeMoreLess();
</script>


