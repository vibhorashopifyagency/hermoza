{% render 'product-block-style-2' %}

<div class="trending-product product-block-2 trending-block-{{section.id}}">
  <div class="container">
    <div class="trending-product-inner">
      {%- if section.settings.product_block_title != blank -%}
        <div class="section-header">
          <div class="row align-item-center">
            <div class="{%- if countdown != blank -%}col-xl-6 col-lg-12 col-md-12{% else %} col-xl-12 col-lg-12 col-md-12{% endif %}">
              <div class="section-title text-{{ section.settings.product_block_align }} text-mb-{{ section.settings.product_block_align_mobile }}">
                <h3 class="title wow {{ section.settings.animations_type_title }} delay-{{ section.settings.animation_delay_title | replace: ".", "_" }}">
                    <style>
                      .trending-product.trending-block-{{section.id}} .section-header .title.delay-{{ section.settings.animation_delay_title | replace: ".", "_" }} {
                          animation-delay: {{ section.settings.animation_delay_title }}
                      }
                    </style>
                    <span class="text">{{ section.settings.product_block_title | escape }}</span>
                </h3>
                {% if section.settings.description_text != blank %}
                  <div class="section-desc wow {{ section.settings.animations_type_description }} delay-{{ section.settings.animation_delay_description | replace: ".", "_" }}">
                    <style>
                      .trending-product.trending-block-{{section.id}} .section-header .section-desc.delay-{{ section.settings.animation_delay_description | replace: ".", "_" }} {
                          animation-delay: {{ section.settings.animation_delay_description }}
                      }
                    </style>
                    <p>{{ section.settings.description_text | escape }}</p>
                  </div>
                {% endif %}
              </div>
            </div>
            {%- if countdown != blank -%}
              {% assign today_date = 'now' | date: '%s' %}
              {% assign pre_date = countdown | date: '%s' %}
              {% if today_date < pre_date %}
                <div class="col-xl-6 col-lg-12 col-md-12">
                  <div class="product--countdown wow {{ section.settings.animations_type_countdown }} delay-{{ section.settings.animation_delay_countdown | replace: ".", "_" }}">
                      <style>
                        .trending-product.trending-block-{{section.id}} .product--countdown.section-desc.delay-{{ section.settings.animation_delay_countdown | replace: ".", "_" }} {
                            animation-delay: {{ section.settings.animation_delay_countdown }}
                        }
                      </style>
                      <div class="product-countdown-title">
                        <span>{{ section.settings.countdown_title | escape }}</span>
                      </div>
                      <div class="product-countdown-block countdown-{{ section.id }}" 
                      data-countdown 
                      data-countdown-value="{{ countdown }}">
                      </div>
                  </div>
                </div>
              {%- endif -%}
            {% endif %}
          </div>
        </div>
      {%- endif -%}
      <div class="scoder-block-content content-align-{{ section.settings.product_content_text_align }} wow {{ section.settings.animations_type_product }} delay-{{ section.settings.animation_delay_product | replace: ".", "_" }}" data-image-ratio="{{ image_ratio }}">
          <style>
              .trending-product.trending-block-{{section.id}} .scoder-block-content.delay-{{ section.settings.animation_delay_product | replace: ".", "_" }} {
                  animation-delay: {{ section.settings.animation_delay_product }}
              }
          </style>
          {%- if layout== 'grid' -%}
              {%- liquid
                  assign product_limit = 0
                  assign column = section.settings.product_block_per_row
                  if infinite_scroll
                      assign product_limit = limit
                  endif
              -%}
              <div class="products-grid productGrid column-{{ section.settings.layout }} column-tb-{{ section.settings.layout_tablet }} column-mb-{{ section.settings.layout_mobile }} {% if swipe %} slider slider--tablet grid grid--peek{% endif %}" data-products-to-show="{{ limit }}">
          {%- elsif layout == 'slider' -%}
              {%- liquid
                  assign column = section.settings.product_block_show
                  assign dots = section.settings.product_block_dots
                  assign dots_mb = section.settings.product_block_dots_mb
                  assign arrows = section.settings.product_block_arrows
                  assign arrows_mb = section.settings.product_block_arrows_mb
                  assign product_table = section.settings.product_block_show_tablet
                  assign product_mobile = section.settings.product_block_show_mobile
                  assign autoplay = section.settings.autoplay
                  assign slideshow_speed = section.settings.slideshow_speed
                  assign slideshow_transition = section.settings.slideshow_transition
              -%}
              <div class="products-carousel productGrid column-{{ column }}">
          {%- endif -%}
              {%- for tag in current_tags -%}
                  {%- if tag contains 'limit=' -%}
                      {%- assign limit = tag | remove: 'limit=' -%}
                  {%- elsif tag contains 'sectionId=' -%}
                      {%- assign sectionId = tag | remove: 'sectionId=' -%}
                  {%- elsif tag contains 'imageRatio=' -%}
                      {%- assign image_ratio = tag | remove: 'imageRatio=' -%}
                  {%- elsif tag contains 'swipe=' -%}
                      {%- assign swipe = tag | remove: 'swipe=' -%}
                  {%- elsif tag contains 'hasCountdown=' -%}
                      {%- assign hasCountdown = tag | remove: 'hasCountdown=' -%}
                  {%- endif -%}
              {%- endfor -%}

              {%- if collection.products[0] != nil -%}
                  {%- for product in collection.products limit: limit -%}
                      <div class="product{% if swipe == 'true' %} slider__slide grid__item{% endif %}">
                          {% render 'product-grid-layout-2',
                              product_card_product: product,
                              portrait_aspect_ratio: '125',
                              serial: forloop.index,
                              sectionId: sectionId,
                              media_size: image_ratio,
                              hasCountdown: hasCountdown,
                              loading: true
                          %}
                      </div>
                  {%- endfor -%}
                  {%- else -%}
                  {%- for product in (1..limit) -%}
                      <div class="product{% if swipe %} slider__slide grid__item{% endif %}">
                          {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                          {% render 'product-card-placeholder',
                              index: current
                          %}
                      </div>
                  {%- endfor -%}
              {%- endif -%}
          </div>
          {%- if swipe -%}
              <div class="slider-buttons no-js-hidden{% if products_to_display < 4 %} medium-hide{% endif %}{% if products_to_display < 3 %} small-hide{% endif %}">
                  <div class="slider-counter">
                      <span class="slider-counter--current">1</span>
                      <span aria-hidden="true"> / </span>
                      <span class="visually-hidden">{{ 'accessibility.of' | t }}</span>
                      <span class="slider-counter--total">{{ products_to_display }}</span>
                  </div>
                  <div class="slider-action">
                      <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}">
                          {% render 'icon-caret' %}
                      </button>
                      <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'accessibility.next_slide' | t }}">
                          {% render 'icon-caret' %}
                      </button>
                  </div>
              </div>
          {%- endif -%}
          {%- if infinite_scroll and collections[collection].handle != '' and layout == 'grid' -%}
              {%- assign product_total = collections[collection].all_products_count -%}
              {%- if product_total > product_limit -%}
                  <div class="product-infinite-scroll text-center {% if swipe %}hidden-mobile{% endif %}" data-image-ratio="{{ image_ratio }}" data-product-infinite>
                      <button type="button" class="button button--secondary"
                          data-collection="{{ collection.handle }}"
                          data-limit="{{ product_limit }}"
                          data-swipe="{{ swipe }}"
                          data-page="2"
                          data-total="{{ product_total }}"
                          data-image-ratio="{{ image_ratio }}"
                          sectionId="{{ section.id }}"
                          {% if countdown != blank %}
                          hasCountdown="true"
                          {% endif %}
                          {% if product_total <= product_limit %}
                              disabled="disabled"
                          {% endif %}
                      >   
                          {{ section.settings.button_icon }}
                          <span>{{ section.settings.button_text }}</span>
                      </button>
                  </div>
              {%- endif -%}
          {%- endif -%}
      </div>
    </div>
  </div>
</div>
<div class="slick-button-arrow">
  <div class="product-prev-icon">{% render 'arrow-left' %}</div>
  <div class="product-next-icon">{% render 'arrow-right' %}</div>
</div>
{%- if layout == 'slider' -%}
  <script>
    $(document).ready(function(){
      $(".product-prev-icon").appendTo(".products-carousel .slick-arrow.slick-prev");
      $(".product-next-icon").appendTo(".products-carousel .slick-arrow.slick-next");
    });
    if ($(".products-carousel").length > 0) {
        $(".products-carousel").slick({
          slidesToShow: {{ column }},
          slidesToScroll: {{ column }},
          speed: 400,
          dots: {{ dots }},
          arrows: {{ arrows }},
          rtl: {{ rtl }},
          margin: 30,
          autoplay: {{ autoplay }},
          autoplaySpeed: {{ slideshow_speed }},
          responsive: [
            {
              breakpoint: 1200,
              settings: {
                dots: {{dots_mb}},
                arrows: {{ arrows_mb }},
                slidesToScroll: {{ product_table }},
                slidesToShow: {{ product_table }}
              }
            },
            {
              breakpoint: 768,
              settings: {
                slidesToScroll: {{ product_mobile }},
                slidesToShow: {{ product_mobile }}
              }
            },
          ]
        });
    }
  </script>
{%- endif -%}

