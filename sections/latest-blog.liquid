{%- liquid
  assign blog_bg = section.settings.blog_bg
  assign blog_bg_gradient = section.settings.blog_bg_gradient
  assign blog_bg_image = section.settings.blog_bg_image

  assign margin_bottom_image = section.settings.margin_bottom_image
  assign margin_bottom_title = section.settings.margin_bottom_title | default: '0'
  assign margin_bottom_info = section.settings.margin_bottom_info | default: '13'
  assign margin_bottom_des = section.settings.margin_bottom_des | default: '6'

  assign block_item_style = section.settings.block_item_style

  assign blog_show_author = section.settings.blog_show_author
  assign blog_show_date = section.settings.blog_show_date
  assign blog_show_des = section.settings.blog_show_des
  assign blog_show_more = section.settings.blog_show_more
  assign limit_content_des = section.settings.limit_content_des | default: '22'

  assign slider_dots = section.settings.slider_dots
  assign slider_dots_mb = section.settings.slider_dots_mb
  assign slider_arrows = section.settings.slider_arrows
  assign slider_arrows_mb = section.settings.slider_arrows_mb
  assign slider_show = section.settings.slider_show
  assign slider_show_tb = section.settings.slider_show_tb
  assign slider_show_mb = section.settings.slider_show_mb
  assign autoplay = section.settings.autoplay
  assign slide_speed = section.settings.slide_speed
  assign block_button_border = section.settings.block_button_border

  if settings.enable_layout_rtl != blank
      assign rtl = true
  else
      assign rtl = false
  endif
-%}

<div class="featured-blog-block latest-blog-block">
  <div class="container">
        <div class="row">
          <div class="col-xl-4 col-lg-4 col-md-12 wow {{ section.settings.animations_type_heading }}">
            {%- if section.settings.block_title_title != blank -%}
              <div class="section-header">
                <div class="row align-item-center">
                  <div class="col-xl-12 col-lg-12 col-md-12">
                    <div class="section-title text-{{ section.settings.block_title_align }} text-mb-{{ section.settings.block_title_align_mobile }}">
                      {%- if section.settings.sub_title != blank -%}
                          <p class="banner-sub-title">
                              <span>{{ section.settings.sub_title }}</span>
                          </p>
                      {%- endif -%}
                      <h3 class="title">
                          <span class="text">{{ section.settings.block_title_title | escape }}</span>
                      </h3>
                      <div class="heading-desc">
                        {{ section.settings.description_text }}
                      </div>
                    </div>
                  </div>
                  {% if section.settings.view_all != blank %}
                    <div class="col-xl-12 col-lg-12 col-md-12">
                      <div class="view-all-button text-{{ section.settings.view_all_align }} text-mb-{{ section.settings.view_all_align_mobile }}">
                        {% if section.settings.hedding_button_style == '1'%}
                          <a class="view_all"{% if section.settings.link_view_all == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.link_view_all }}"{% endif %} title="{{ section.settings.view_all }}">
                              {{ section.settings.view_all }}
                              {%- if section.settings.icon_view_all -%}
                                <span class="icon-svg">
                                    {{ section.settings.icon_view_all }}
                                </span>
                              {%- endif -%}
                          </a>
                        {% else %}
                          <a class="button"{% if section.settings.link_view_all == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.link_view_all }}"{% endif %} title="{{ section.settings.view_all }}">
                              {{ section.settings.view_all }} {% render 'arrow-right-2' %}
                          </a>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                </div>
              </div>
            {%- endif -%}
          </div>
          <div class="col-xl-8 col-lg-8 col-md-12 wow {{ section.settings.animations_type_blog }}">
            <div class="featured-blog-inner">
              <div class="featured-blog-slider dot-style-{{ settings.slick_dots_style }} latest-blog-{{ section.settings.blog_block_layout }} column-{{ section.settings.layout }} column-tb-{{ section.settings.layout_tablet }} column-mb-{{ section.settings.layout_mobile }}">
                  {%- assign blog = blogs[section.settings.blog_posts] -%}
                  {% for article in blog.articles limit: section.settings.post_limit %}
                    <div class="blog-slide blog-block-{{article.id}}">
                      {% render 'article-card-featured',
                        article: article,
                        blog_show_author: blog_show_author,
                        blog_show_date: blog_show_date,
                        blog_show_des: blog_show_des,
                        blog_show_more: blog_show_more,
                        limit_content_des: limit_content_des,
                        margin_bottom_image: margin_bottom_image,
                        margin_bottom_title: margin_bottom_title,
                        margin_bottom_info: margin_bottom_info,
                        margin_bottom_des: margin_bottom_des,
                        block_button_border: block_button_border,
                        block_item_style: block_item_style,
                      %}
                    </div>
                  {% endfor %}
              </div>
            </div>
          </div>
        </div>
  </div>
</div>

<style>
