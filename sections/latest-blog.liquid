      {% if section.settings.sub_heading_font == 'font_1' %}
          --blog-fch-sub-title-font-family: {{fonts_name}};
      {% else %}
          --blog-fch-sub-title-font-family: {{fonts_name_2}};
      {% endif %}
  }
  .featured-blog-block {
    margin-top: {{ section.settings.mg_top_desktop | append: 'px' }};
    margin-bottom: {{ section.settings.mg_bottom_desktop | append: 'px' }};
    padding-top: {{ section.settings.spacing_top_desktop | append: 'px' }};
    padding-bottom: {{ section.settings.spacing_bottom_desktop | append: 'px' }};
    {% if blog_bg_image != blank %}
      background: url({{ blog_bg_image | img_url: '1920x' }});
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
      background-color: transparent;
    {% else %}
      background: {% if blog_bg_gradient != blank %}{{ blog_bg_gradient }}{% else %}{{ blog_bg }}{% endif %};
    {% endif %}
    {% if section.settings.border_color != blank %}
        {%- if section.settings.border_top != blank -%}
           border-top: {{ section.settings.border_width | append: 'px' }} solid {{ section.settings.border_color }};
        {%- endif -%}
    {% else %}
        {%- if section.settings.border_bottom != blank -%}
            border-bottom: {{ section.settings.border_width | append: 'px' }} solid var(--button-border-color);
        {%- endif -%}
    {% endif %}
  }
  .featured-blog-block .banner-sub-title {
    font-size: {{ section.settings.font_size_sub_title | append: 'px' }};
    {% if section.settings.sub_title_color != blank %}
         color: {{ section.settings.sub_title_color }};
    {% else %}
         color: var(--heading-text-color);
    {% endif %}
    text-transform: {{ section.settings.product_title_transform }};
    font-weight: {{ section.settings.sub_title_font_weight }};
    padding-bottom: {{ section.settings.sub_title__space_top | append: 'px' }};
    letter-spacing: {{ section.settings.font_size_sub_letter_spacing | append: 'px' }};
    font-family: var(--blog-fch-sub-title-font-family);
    margin-bottom: 0;
  }
  .featured-blog-block .section-header .title {
      padding-bottom: {{ section.settings.mg_bottom_title | append: 'px' }};
      letter-spacing: {{ section.settings.title_letter_spacing | append: 'px' }};
  }
  .article-card__info .article-card__author {
      font-size: {{ section.settings.info_font_size | append: 'px' }};
  }
  .featured-blog-block .section-header .view_all {
      font-size: {{ section.settings.view_all_font_size | append: 'px' }};
      line-height: calc({{ section.settings.view_all_font_size | append: 'px' }} + 4px);
      font-weight: {{ section.settings.button_text_font_weight }};
      text-transform: {{ section.settings.button_text_text_transform }};
  }
  .featured-blog-block .section-header .view_all .icon-svg {
      width: 19px;
      display: inline-block;
      margin-left: 5px;
  }
  .featured-blog-block .section-header .view_all .icon-svg path {
      fill: var(--link-color);
      transition: all 400ms ease;
  }
  .featured-blog-block .section-header .view_all:hover .icon-svg path {
      fill: var(--link-hover-color);
  }
  .article-card__footer .article-card__link {
      font-size: {{ section.settings.block_button_size | append: 'px' }};
      text-transform: {{ section.settings.block_button_text_transform }};
      font-weight: {{ section.settings.block_button_fw }};
      {% if section.settings.block_button_color != blank %}
          color: {{ section.settings.block_button_color }};
      {% else %}
          color: var(--link-color);
      {% endif %}
      
  }
  .article-card__footer .article-card__link:hover {
      {% if section.settings.block_button_color_hover != blank %}
          color: {{ section.settings.block_button_color_hover }};
      {% else %}
          color: var(--link-hover-color);
      {% endif %}
      
  }
  .article-card__footer .article-card__link.article-card-link-arrow {
      border-bottom: unset !important;
  }
  .article-card__footer .article-card__link.article-card-link-arrow svg {
      width: calc({{ section.settings.block_button_size | append: 'px' }} * 0.9);
      margin-left: 5px;
      {% if section.settings.block_button_color != blank %}
          fill: {{ section.settings.block_button_color }};
      {% else %}
          color: var(--link-color);
      {% endif %}
      transition: all 400ms ease;
  }
  .article-card__footer .article-card__link.article-card-link-arrow:hover svg {
      {% if section.settings.block_button_color_hover != blank %}
          fill: {{ section.settings.block_button_color_hover }};
      {% else %}
          fill: var(--link-hover-color);
      {% endif %}
  }
  .article-card__info .article-card__title {
      font-size: {{ section.settings.blog_title_size | append: 'px' }};
      text-transform: {{ section.settings.blog_title_text_transform }};
      font-family: var(--font-body-family);
      font-weight: {{ section.settings.blog_title_fw }};
      display: -webkit-box;
      -webkit-line-clamp: 1;
      text-overflow: ellipsis;
      -webkit-box-orient: vertical;
      overflow: hidden;
  }
  .article-card__footer.link-underline .article-card__link {
      {% if section.settings.block_button_color != blank %}
          border-bottom: 1px solid {{ section.settings.block_button_color }};
      {% else %}
          border-bottom: 1px solid var(--link-color);
      {% endif %}
      display: inline-block;
  }
  .article-card__footer.link-underline .article-card__link:hover {
      {% if section.settings.block_button_color_hover != blank %}
          border-bottom: 1px solid {{ section.settings.block_button_color_hover }};
      {% else %}
          border-bottom: 1px solid var(--link-hover-color);
      {% endif %}
  }
  .blog-slide .article-card .article-card__image-wrapper {
      overflow: hidden;
  }
  .blog-slide .article-card .adaptive_height img {
      transition: all 400ms ease;
  }
  .blog-slide .article-card:hover .adaptive_height img {
      transform: scale(1.1);
  }
  .latest-blog-block .section-header .button {
      font-size: {{ section.settings.view_all_font_size | append: 'px' }};
      {% if section.settings.view_all_color != blank %}
          color: {{ section.settings.view_all_color }};
      {% else %}
          color: var(--button-color);
      {% endif %}
      letter-spacing: {{ section.settings.view_all_letter_spacing | append: 'px' }};
      {% if section.settings.view_all_bg_color != blank %}
          background: {{ section.settings.view_all_bg_color }};
      {% else %}
          background: var(--button-bg-color);
      {% endif %}
      {% if section.settings.view_all_border_color != blank %}
          border: {{ section.settings.view_all_border | append: 'px' }} solid {{ section.settings.view_all_border_color }};
      {% else %}
          border: {{ section.settings.view_all_border | append: 'px' }} solid var(--button-border-color);
      {% endif %}
      text-transform: {{ section.settings.button_text_text_transform }};
      font-weight: {{ section.settings.button_text_font_weight }};
  }
  .latest-blog-block .section-header .button svg {
      {% if section.settings.view_all_color != blank %}
          fill: {{ section.settings.view_all_color }};
      {% else %}
          fill: var(--button-color);
      {% endif %}
    transition: all 400ms ease;
  }
  
  {% if settings.button_hover_style == '2' %}
    .latest-blog-block .section-header .button {
      position: relative;
      overflow: hidden;
      z-index: 0;
    }
    .latest-blog-block .section-header .button:before {
      content: "";
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      transform: unset;
      display: unset;
      border: unset;
      border-radius: unset;
      width: unset;
      height: unset;
      animation: unset;
      opacity: unset;
      visibility: unset;
      background: {{ section.settings.view_all_bghover_color }};
      right: 100%;
      z-index: -1;
      transition: all 400ms ease;
    }
    .latest-blog-block .section-header .button:hover {
      {% if section.settings.view_all_hover_color != blank %}
          color: {{ section.settings.view_all_hover_color }};
      {% else %}
          color: var(--button-hover-color);
      {% endif %}
      {% if section.settings.view_all_borderhover_color != blank %}
          border: {{ section.settings.view_all_border | append: 'px' }} solid {{ section.settings.view_all_borderhover_color }};
      {% else %}
          border: {{ section.settings.view_all_border | append: 'px' }} solid var(--button-border-hover-color);
      {% endif %}
    }
    .latest-blog-block .section-header .button:hover svg {
        {% if section.settings.view_all_hover_color != blank %}
            fill: {{ section.settings.view_all_hover_color }};
        {% else %}
            fill: var(--button-hover-color);
        {% endif %}
    }
    .latest-blog-block .section-header .button:hover:before {
      right: 0%;
    }
