      padding-top: {{ section.settings.spacing_top_mobile | append: 'px' }};
      padding-bottom: {{ section.settings.spacing_bottom_mobile | append: 'px' }};
    }
    .modern-blog-block .banner-sub-title {
      font-size: {{ section.settings.font_size_sub_title_mb | append: 'px' }};
      padding-bottom: {{ section.settings.sub_title__space_top_mb | append: 'px' }};
