      font-size: {{ section.settings.blog_title_size_mb | append: 'px' }};
    }
    .modern-blog-block .content-block .article-card__footer .article-card__link {
      font-size: {{ section.settings.read_more_size_mb | append: 'px' }};
    }
    .modern-blog-block .blogs-list .blog-post-item {
        width: 100%;
    }
    .modern-blog-block .blogs-list .blog-post-item .article-card__title {
      font-size: {{ section.settings.blog_title_size_mb | append: 'px' }};
    }
  }
</style>
    
