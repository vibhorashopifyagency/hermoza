    margin-bottom: 30px;
  }
  .modern-blog-block .blogs-list .blog-post-item:last-child {
    margin-bottom: 0;
  }
  .modern-blog-block .blogs-list .blog-post-item .article-card__title {
    font-size: calc({{ section.settings.blog_title_size | append: 'px' }} - 2px);
  }
  .modern-blog-block .blogs-list .blog-post-item .article-card >.row {
    align-items: center;
  }
  .modern-blog-block .content-block .article-card__image-wrapper img {
    transition: all 400ms ease;
  }
  .modern-blog-block .content-block .article-card:hover .article-card__image-wrapper img {
    transform: scale(1.1);
  }

