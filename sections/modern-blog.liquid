{%- liquid
  assign blog_bg = section.settings.blog_bg
  assign blog_bg_gradient = section.settings.blog_bg_gradient
  assign blog_bg_image = section.settings.blog_bg_image

  assign post_limit = section.settings.post_limit
  assign limit_content_des = section.settings.limit_content_des
-%}

<div class="modern-blog-block">
  <div class="container">
    <div class="modern-blog-inner">
      <div class="section-header">
            <div class="section-title text-{{ section.settings.block_title_align }} text-mb-{{ section.settings.block_title_align_mobile }}">
              {%- if section.settings.sub_title != blank -%}
                  <p class="banner-sub-title {% if section.settings.animations_type_subtitle != 'none'%}wow{% endif %} {{ section.settings.animations_type_subtitle }} delay-{{ section.settings.animation_delay_subtitle | replace: ".", "_" }}">
                      <span>{{ section.settings.sub_title }}</span>
                  </p>
                  <style>
                    .modern-blog-block .section-header .banner-sub-title.delay-{{ section.settings.animation_delay_subtitle | replace: ".", "_" }} {
                        animation-delay: {{ section.settings.animation_delay_subtitle }}
                    }
                  </style>
              {%- endif -%}
              {%- if section.settings.block_title_title != blank -%}
                <h3 class="title {% if section.settings.animations_type_title != 'none'%}wow{% endif %} {{ section.settings.animations_type_title }} delay-{{ section.settings.animation_delay_title | replace: ".", "_" }}">
                    <span class="text">{{ section.settings.block_title_title | escape }}</span>
                </h3>
                <style>
                  .modern-blog-block .section-header .title.delay-{{ section.settings.animation_delay_title | replace: ".", "_" }} {
                      animation-delay: {{ section.settings.animation_delay_title }}
                  }
                </style>
              {%- endif -%}
            </div>
      </div>

      <div class="modern-blog-content {% if section.settings.animations_type_product != 'none'%}wow{% endif %} {{ section.settings.animations_type_product }} delay-{{ section.settings.animation_delay_product | replace: ".", "_" }}">
        <style>
            .modern-blog-block .modern-blog-content.delay-{{ section.settings.animation_delay_product | replace: ".", "_" }} {
                animation-delay: {{ section.settings.animation_delay_product }}
            }
        </style>
        {%- assign blog = blogs[section.settings.blog_posts] -%}
        <div class="row">
          <div class="col-xl-6 col-lg-6 col-md-12">
            <div class="content-block main-blog-view">
              <div class="blog-post-main-item" data-main-view data-article-id="{{ blog.articles[0].id }}">
                  {% render 'article-card-main-view', article: blog.articles[0], limit_content_des: limit_content_des %}  
              </div>
            </div>
          </div>
          <div class="col-xl-6 col-lg-6 col-md-12">
            <div class="content-block blogs-list">
                {%- for article in blog.articles limit: post_limit -%}
                    {%- if forloop.first == false -%}
                      <div class="blog-post-item" id="block-{{article.id}}" data-list-item data-article-id="{{ article.id }}">
                          {% render 'article-card-list-item', article: article, limit_content_des: limit_content_des %}  
                      </div>
                    {%- endif -%}
                {%- endfor -%}
                {%- if view_all != blank -%} 
                    <{% if link_view_all != blank %}a href="{{ link_view_all }}"{% else %}div{% endif %} class="link view-all-link text-left hide-on-mobile{% if enable_border_view_all %} is-underlined{% endif %}" style="--font-weight: {{ font_weight_view_all }};--margin-top: {{ mg_top_view }};--color: {{ color_view_all }}"><span class="text">{{ view_all }}</span></{% if link_view_all != blank %}a{% else %}div {% endif %}>
                {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

