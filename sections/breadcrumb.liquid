<div class="breadcrumb-section breadcrumb-{{section.id}}">
  <div class="{% if section.settings.container == 'fullwidth'%}container-full{% else %}container{% endif %}">
    <div class="text-{{ section.settings.breadcrumb_alignment }}">
      {% render 'breadcrumb' %}
    </div>
  </div>
</div>

<style>
  .breadcrumb-section.breadcrumb-{{section.id}} {
    padding-top: {{ section.settings.breadcrumb_mg_top_desktop | append: 'px' }};
    padding-bottom: {{ section.settings.breadcrumb_mg_bottom_desktop | append: 'px' }};
  }
  .breadcrumb-section.breadcrumb-{{section.id}} .container-full {
    padding-left: {{ section.settings.padding_full_width | append: 'px' }};
    padding-right: {{ section.settings.padding_full_width | append: 'px' }};
  }
  .breadcrumb-section.breadcrumb-{{section.id}} .text-left {
     justify-content: flex-start; 
  }
  .breadcrumb-section.breadcrumb-{{section.id}} .text-center {
     justify-content: center; 
  }
  .breadcrumb-section.breadcrumb-{{section.id}} .text-right {
     justify-content: flex-end; 
  }
  .breadcrumb-section.breadcrumb-{{section.id}} nav span, .breadcrumb-section.breadcrumb-{{section.id}} nav a {
    color: {{ section.settings.color_show_more }};
    font-size: {{ section.settings.fontsize_breadcrumb | append: 'px' }};
    text-transform: {{ section.settings.show_more_text_transform }};
    font-weight: {{ section.settings.fontweight_show_more }};
  }
  .breadcrumb-section.breadcrumb-{{section.id}} nav a:hover {
    color: {{ section.settings.show_more_color_hover }};
  }

  @media (max-width: 1024px) {
    readcrumb-section.breadcrumb-{{section.id}} {
      padding-top: {{ section.settings.breadcrumb_mg_top_tablet | append: 'px' }};
      padding-bottom: {{ section.settings.breadcrumb_mg_bottom_tablet | append: 'px' }};
    }
  }

  @media (max-width: 767px) {
    readcrumb-section.breadcrumb-{{section.id}} {
      padding-top: {{ section.settings.breadcrumb_mg_top_mobile | append: 'px' }};
      padding-bottom: {{ section.settings.breadcrumb_mg_bottom_mobile | append: 'px' }};
    }
  }
</style>

